<p id="notice"><%= notice %></p>
<div class="row">
  <div class="col-md-8 col-md-offset-2">
    <div class="well">
      <h3 class="text-center"><%= @recipe.name %></h3>
      <% if @recipe.image.url != nil %>
       <div class="col-md-4">
        <p class="text-center"><%= image_tag @recipe.image.url, width: "200" %></p>
       </div>
       <div class="row">
        <div class="col-md-4 col-md-offset-3">
          <h4>Ingredients:</h4>
          <% @recipe.ingredients.each do |i| %>
            <p><%= i.amount %> <%= i.item %></p>
          <% end %>
        </div>
       </div>

      <% else %>
       <div class="col-md-6 col-md-offset-1">
        <h4>Ingredients:</h4>
        <% @recipe.ingredients.each do |i| %>
          <p><%= i.amount %> <%= i.item %></p>
        <% end %>
       </div>
      <% end %>

      <div class="row">
        <div class="col-md-6 col-md-offset-1">
          <h4>Directions:</h4>
          <p><%= @recipe.directions %></p>
   
          <% if user_signed_in? %>
            <% if @recipe.user_id == current_user.id %>
              <%= link_to 'Edit', edit_recipe_path(@recipe), class: "btn btn-default no-print" %>
            <% end %>
          <% end %>
      
          <%= link_to 'All Recipes', all_path, class: "btn btn-default no-print" %>

          <button onclick='window.print(); return false;' class="pull-right btn btn-default no-print">Print Recipe</button>
        </div>
      </div>
    </div>
  </div>
</div>
