<div class="row">
  <div class="col-md-4">
    <% @recipes.each do |recipe| %>
      <div class="well">
        <div>
          <h3 class="text-center"><%= recipe.name %></h3>
          <% if recipe.image.url != nil %>
          <p><%= image_tag recipe.image.url, width: "100", class: "pull-right" %></p>
          <% end %>

        </div>
        <p>
          <% recipe.ingredients.each do |i| %>
            <p><%= i.amount %> <%= i.item %></p>
          <% end %>
        </p>
        <p><%= recipe.directions %></p>
        <p><%= recipe.category %></p>
        <p><%#= recipe.user_id %></p>
        <p><%= link_to 'Show', recipe %>
      </div>
    <% end %>
  </div>
</div>
