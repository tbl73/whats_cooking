<h2>View your recipes</h2>

	<div class="row">
  <div class="col-md-4">
		<% @mylibrary.recipes.each do |recipe| %>
      <div>
        <div class="well">
          <h3 class="text-center"><%= recipe.name %></h3>
          <div>
          <% if recipe.image.url != nil %>
          <p><%= image_tag recipe.image.url, width: "100", class: "pull-right" %></p>
          <% end %>

       		 </div>
       	 <p>
          <% recipe.ingredients.each do |i| %>
            <p><%= i.amount %> <%= i.item %></p>
          <% end %>
        </p>
        <p><%= recipe.directions %></p>
        <p><%= recipe.category %></p>
        <p><%= link_to 'Show', recipe, class: "btn btn-default" %>
      </div>
    <% end %>
  </div>
</div>

	
