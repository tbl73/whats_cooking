<div class="row">

  <div id="myModal" class="modal fade" role="dialog">
  <div class="modal-dialog modal-sm">

    <!-- Modal content-->
    <div class="modal-content">
        <button type="button" class="close" data-dismiss="modal">&times;</button>
      <div class="modal-body">
        <p>Enter the name of your new meal plan.</p>
        <%= form_tag create_mealplan_path do %>
          <%= text_field_tag :name %> 
          <%= hidden_field_tag :user_id, current_user.id %>
          <%= submit_tag "Create Mealplan", class: "btn btn-default" %>
        <% end %>

      </div>
    </div>

  </div>
</div>
</div>

<div class="row">
  <h2 class="text-center">My Recipe Library</h2>

	<% @mylibrary.recipes.order(:name).each do |recipe| %>
  <div class="col-md-4">
    <h4><%= link_to remove_from_library_path(recipe_id: recipe.id) do %>
     <i class="fa fa-trash" aria-hidden="true"></i>
     <% end %> 
    <%= link_to recipe.name, recipe_path(recipe.id) %>
    </h4>
  </div>
  <% end %>
</div>

	
<!-- Trigger the modal with a button -->
<button type="button" class="btn btn-default" data-toggle="modal" data-target="#myModal">Make New Meal Plan</button>

